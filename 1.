class Solution(object):
    def twoSum(self, nums, target):
        """
        :type nums: List[int]
        :type target: int
        :rtype: List[int]
        """
        hashMap = {}
        for i, num in enumerate(nums):
            hashMap[num] = i

        for i, num in enumerate(nums):
            other = target - num
            if other in hashMap and hashMap[other] != i:
                return [i, hashMap[other]]
                
# elegant solution
class Solution:
    def twoSum(self, nums, target):
        hashtable = dict()
        for i, num in enumerate(nums):
            if target - num in hashtable:
                return [hashtable[target - num], i]
            hashtable[nums[i]] = i
        return []

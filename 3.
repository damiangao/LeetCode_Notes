# elegant solution
class Solution:
    def lengthOfLongestSubstring(self, s: str) -> int:
        if not s:
            return 0
        d = {s[0]:0}
        l = 0
        max_len = 1
        for i in range(1, len(s)):
            if s[i] in d and d[s[i]] >= l:
                l = d[s[i]] + 1
            d[s[i]] = i
            max_len = max(max_len, i-l+1)
        return max_len        

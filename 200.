# violent solution
class Solution:
    def numIslands(self, grid: List[List[str]]) -> int:
        nr = len(grid)
        if not nr:
            return 0
        nc = len(grid[0])
        ret = 0
        for x in range(nr):
            for y in range(nc):
                if grid[x][y] == "1":
                    self.dfs(grid, x, y)
                    ret += 1
        return ret
    def dfs(self, grid, x, y):
        if grid[x][y] == "0":
            return
        else:
            grid[x][y] = "0"
            for i, j in [(x-1, y), (x+1, y), (x, y-1), (x, y+1)]:
                if 0 <= i < len(grid) and 0 <= j < len(grid[0]):
                    self.dfs(grid, i, j)
